<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>netstandard2.0</TargetFramework>
    <Authors>Pavel Levchuk</Authors>
    <Company>Spaier</Company>
    <PackageRequireLicenseAcceptance>true</PackageRequireLicenseAcceptance>
    <GenerateDocumentationFile>true</GenerateDocumentationFile>
    <GeneratePackageOnBuild>true</GeneratePackageOnBuild>
    <Version>3.2.0</Version>
    <Copyright>Pavel Levchuk</Copyright>
    <LangVersion>latest</LangVersion>
    <NoWarn>$(NoWarn);1591;RCS1090</NoWarn>
    <Description>
      Library for verifying V2 or V3 reCAPTCHA token in ASP.NET Core 2.1+
    </Description>
    <PackageProjectUrl>https://github.com/Spaier/Spaier.Recaptcha</PackageProjectUrl>
    <PackageLicenseUrl>https://github.com/Spaier/Spaier.Recaptcha/blob/master/LICENSE</PackageLicenseUrl>
    <RepositoryUrl>https://github.com/Spaier/Spaier.Recaptcha</RepositoryUrl>
    <PackageTags>aspnetcore, recaptcha, grecaptcha</PackageTags>
    <PackageReleaseNotes>See (https://github.com/Spaier/Spaier.Recaptcha/blob/master/CHANGELOG.md)</PackageReleaseNotes>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="Microsoft.AspNet.WebApi.Client" Version="5.2.6" />
    <PackageReference Include="Microsoft.AspNetCore.Mvc" Version="2.1.0" />
    <PackageReference Include="Microsoft.Extensions.Http" Version="2.1.0" />
    <PackageReference Include="Microsoft.Extensions.Options.ConfigurationExtensions" Version="2.1.0" />
  </ItemGroup>

</Project>